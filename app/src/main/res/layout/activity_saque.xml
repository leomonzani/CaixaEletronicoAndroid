<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_saque"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="leomonzani.caixaeletronico.SaqueActivity"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="R$ 5,00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btCinco"
            android:layout_weight="1" />

        <Button
            android:text="R$ 10,00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btDez"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="R$ 20,00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btVinte"
            android:layout_weight="1" />

        <Button
            android:text="R$ 50,00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btCinquenta"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="R$ 100,00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btCem"
            android:layout_weight="1" />

        <Button
            android:text="Outro Valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btOutro"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="Sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btSair" />

</LinearLayout>
